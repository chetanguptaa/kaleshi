generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum VoteType {
  BUY
  SELL
}

enum UserType {
  COMMON
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  type      UserType @default(COMMON)
  name      String?
  account   Account?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id          String       @id @default(uuid())
  coins       Int          @default(300) // Pointer: On the UI it'll show 3 only, i.e we'll divide it by 100,
  userId      Int          @unique
  user        User         @relation(fields: [userId], references: [id])
  comments    Comment[]
  predictions Prediction[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model MarketCategory {
  id        Int              @id @default(autoincrement())
  name      String           @unique
  profile   String?
  parentId  Int?
  markets   Market[]
  parent    MarketCategory?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children  MarketCategory[] @relation("CategoryHierarchy")
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

model Market {
  id               Int            @id @default(autoincrement())
  name             String
  marketCategoryId Int
  profile          String?
  ruleBook         String?
  rules            String?
  marketCategory   MarketCategory @relation(fields: [marketCategoryId], references: [id])
  predictions      Prediction[]
  trades           Trade[]
  comments         Comment[]
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}

model Trade {
  id        String   @id @default(uuid())
  name      String
  quantity  Int
  price     Int
  marketId  Int
  market    Market   @relation(fields: [marketId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Prediction {
  id        String   @id @default(uuid())
  vote      VoteType
  marketId  Int
  accountId String
  market    Market   @relation(fields: [marketId], references: [id])
  account   Account  @relation(fields: [accountId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id        String   @id @default(uuid())
  comment   String
  accountId String
  marketId  Int
  account   Account  @relation(fields: [accountId], references: [id])
  market    Market   @relation(fields: [marketId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
