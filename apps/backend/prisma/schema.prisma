generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "sqlite"
}

enum OrderSide {
  BUY
  SELL
}

enum CommentVoteType {
  UP
  DOWN
}

enum OrderStatus {
  OPEN
  PARTIAL
  FILLED
  CANCELLED
}

enum OrderType {
  LIMIT
  MARKET
}

enum TimeInForce {
  GTC
  IOC
  FOK
}

model User {
  id              Int        @id @default(autoincrement())
  avatar          String?
  email           String     @unique
  password        String
  name            String
  account         Account?
  isEmailVerified Boolean    @default(false)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  sessions        Session[]
  userRoles       UserRole[]
}

model Role {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  userRoles UserRole[]
}

model UserRole {
  userId Int
  roleId Int
  user   User @relation(fields: [userId], references: [id])
  role   Role @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
}

model Account {
  id            String        @id @default(uuid())
  coins         Int           @default(300) // Pointer: On the UI it'll show 3 only, i.e we'll divide it by 100,
  reservedCoins Int           @default(0)
  userId        Int           @unique
  user          User          @relation(fields: [userId], references: [id])
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  comments      Comment[]
  commentVotes  CommentVote[]
}

model MarketCategory {
  id          Int              @id @default(autoincrement())
  name        String           @unique
  avatar      String?
  information Json?
  parentId    Int?
  markets     Market[]
  parent      MarketCategory?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    MarketCategory[] @relation("CategoryHierarchy")
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model Market {
  id               Int            @id @default(autoincrement())
  name             String
  avatar           String?
  startsAt         DateTime // when the voting can start
  endsAt           DateTime // when the voting will end
  marketCategoryId Int
  isActive         Boolean        @default(false)
  information      Json?
  ruleBook         String?
  rules            String?
  marketCategory   MarketCategory @relation(fields: [marketCategoryId], references: [id])
  outcomes         Outcome[]
  comments         Comment[]
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  @@unique([name, startsAt, endsAt])
}

model Outcome {
  id             String   @id @default(uuid())
  name           String
  avatar         String?
  marketId       Int
  settledPrice   Int?
  isResolved     Boolean?
  winningOutcome Boolean?
  market         Market   @relation(fields: [marketId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Comment {
  id        String        @id @default(uuid())
  comment   String
  accountId String
  marketId  Int
  parentId  String?
  account   Account       @relation(fields: [accountId], references: [id])
  market    Market        @relation(fields: [marketId], references: [id])
  parent    Comment?      @relation("CommentThread", fields: [parentId], references: [id])
  replies   Comment[]     @relation("CommentThread")
  votes     CommentVote[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  isDeleted Boolean       @default(false)
  deletedAt DateTime?

  @@index([marketId])
  @@index([parentId])
  @@index([createdAt])
}

model CommentVote {
  id        String          @id @default(uuid())
  accountId String
  commentId String
  vote      CommentVoteType
  createdAt DateTime        @default(now())
  account   Account         @relation(fields: [accountId], references: [id])
  comment   Comment         @relation(fields: [commentId], references: [id])

  @@unique([accountId, commentId])
  @@index([commentId])
}

model Session {
  id        String   @id @default(uuid())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  expiresAt DateTime
}
