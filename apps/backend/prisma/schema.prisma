generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "sqlite"
}

enum VoteType {
  BUY
  SELL
}

enum CommentVoteType {
  UP
  DOWN
}

model User {
  id               Int              @id @default(autoincrement())
  email            String           @unique
  password         String
  name             String
  account          Account?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  sessions         Session[]
  marketCategories MarketCategory[]
  userRoles        UserRole[]
}

model Role {
  id    Int        @id @default(autoincrement())
  name  String     @unique
  users UserRole[]
}

model UserRole {
  userId Int
  roleId Int
  user   User @relation(fields: [userId], references: [id])
  role   Role @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
}

model Account {
  id           String        @id @default(uuid())
  coins        Int           @default(300) // Pointer: On the UI it'll show 3 only, i.e we'll divide it by 100,
  userId       Int           @unique
  user         User          @relation(fields: [userId], references: [id])
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  orders       Order[]
  comments     Comment[]
  fills        Fill[]
  commentVotes CommentVote[]
}

model MarketCategory {
  id              Int              @id @default(autoincrement())
  name            String           @unique
  information     Json?
  parentId        Int?
  createdByUserId Int
  markets         Market[]
  parent          MarketCategory?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children        MarketCategory[] @relation("CategoryHierarchy")
  createdBy       User             @relation(fields: [createdByUserId], references: [id])
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model Market {
  id               Int            @id @default(autoincrement())
  name             String
  marketCategoryId Int
  information      Json?
  ruleBook         String?
  rules            String?
  marketCategory   MarketCategory @relation(fields: [marketCategoryId], references: [id])
  outcomes         Outcome[]
  comments         Comment[]
  orders           Order[]
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}

model Outcome {
  id        String   @id @default(uuid())
  name      String
  quantity  Int
  price     Int
  marketId  Int
  market    Market   @relation(fields: [marketId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Order {
  id        String   @id @default(uuid())
  side      VoteType // BUY or SELL
  price     Int // points / cents 0â€“100
  quantity  Int // remaining open quantity
  marketId  Int
  accountId String
  outcomeId String
  market    Market   @relation(fields: [marketId], references: [id])
  account   Account  @relation(fields: [accountId], references: [id])
  outcome   Outcome  @relation(fields: [outcomeId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@index([outcomeId, price])
  @@index([outcomeId, side])
  @@index([createdAt])
  @@index([accountId])
}

model Comment {
  id        String        @id @default(uuid())
  comment   String
  accountId String
  marketId  Int
  parentId  String?
  account   Account       @relation(fields: [accountId], references: [id])
  market    Market        @relation(fields: [marketId], references: [id])
  parent    Comment?      @relation("CommentThread", fields: [parentId], references: [id])
  replies   Comment[]     @relation("CommentThread")
  votes     CommentVote[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([marketId])
  @@index([parentId])
  @@index([createdAt])
}

model CommentVote {
  id        String          @id @default(uuid())
  accountId String
  commentId String
  vote      CommentVoteType
  createdAt DateTime        @default(now())
  account   Account         @relation(fields: [accountId], references: [id])
  comment   Comment         @relation(fields: [commentId], references: [id])

  @@unique([accountId, commentId])
  @@index([commentId])
}

model Fill {
  id          String   @id @default(uuid())
  price       Int
  quantity    Int
  buyOrderId  String
  sellOrderId String
  contractId  String
  accountId   String // buyer or seller
  account     Account  @relation(fields: [accountId], references: [id])
  createdAt   DateTime @default(now())
}

model Session {
  id        String   @id @default(uuid())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  expiresAt DateTime
}
