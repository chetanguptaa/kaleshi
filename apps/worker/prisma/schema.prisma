generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "sqlite"
}

enum OrderSide {
  Buy
  Sell
}

enum CommentVoteType {
  UP
  DOWN
}

enum OrderStatus {
  OPEN
  PARTIAL
  FILLED
  CANCELLED
  REJECTED
}

enum OrderType {
  LIMIT
  MARKET
}

enum TimeInForce {
  GTC
  IOC
  FOK
}

model User {
  id              Int        @id @default(autoincrement())
  email           String     @unique
  password        String
  avatar          String?
  name            String
  account         Account?
  isEmailVerified Boolean    @default(false)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  sessions        Session[]
  userRoles       UserRole[]
}

model Role {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  userRoles UserRole[]
}

model UserRole {
  userId Int
  roleId Int
  user   User @relation(fields: [userId], references: [id])
  role   Role @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
}

model Account {
  id            Int           @id @default(autoincrement())
  coins         Int           @default(300) // Pointer: On the UI it'll show 3 only, i.e we'll divide it by 100,
  reservedCoins Int           @default(0)
  userId        Int           @unique
  user          User          @relation(fields: [userId], references: [id])
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  orders        Order[]
  comments      Comment[]
  commentVotes  CommentVote[]
  buyerFills    Fill[]        @relation("BuyerAccountFills")
  sellerFills   Fill[]        @relation("SellerAccountFills")
}

model MarketCategory {
  id        Int              @id @default(autoincrement())
  name      String           @unique
  avatar    String?
  metadata  Json?
  parentId  Int?
  markets   Market[]
  parent    MarketCategory?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children  MarketCategory[] @relation("CategoryHierarchy")
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

model Market {
  id               Int            @id @default(autoincrement())
  name             String
  avatar           String?
  metadata         Json?
  startsAt         DateTime // when the voting can start
  endsAt           DateTime // when the voting will end
  marketCategoryId Int
  isActive         Boolean        @default(false)
  ruleBook         String?
  rules            String?
  marketCategory   MarketCategory @relation(fields: [marketCategoryId], references: [id])
  outcomes         Outcome[]
  comments         Comment[]
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  @@unique([name, startsAt, endsAt])
}

model Outcome {
  id             String   @id @default(uuid())
  name           String
  marketId       Int
  avatar         String?
  metadata       Json?
  settledPrice   Int?
  isResolved     Boolean?
  winningOutcome Boolean?
  market         Market   @relation(fields: [marketId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  orders         Order[]
}

model Order {
  id               Int         @id
  side             OrderSide // BUY or SELL
  price            Int // points / cents 0â€“100 and Pointer: Only required for limit orders
  quantity         Int // multiplel off 100, remaining open quantity
  originalQuantity Int
  accountId        Int
  outcomeId        String
  status           OrderStatus @default(OPEN)
  orderType        OrderType   @default(LIMIT)
  timeInForce      TimeInForce @default(GTC)
  account          Account     @relation(fields: [accountId], references: [id])
  outcome          Outcome     @relation(fields: [outcomeId], references: [id])
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @default(now())
  orderFills       Fill[]      @relation("orderFills")
  fills            Fill[]      @relation("fills")

  @@index([outcomeId, price])
  @@index([outcomeId, side])
  @@index([createdAt])
  @@index([accountId])
}

model Comment {
  id        String        @id @default(uuid())
  comment   String
  accountId Int
  marketId  Int
  parentId  String?
  account   Account       @relation(fields: [accountId], references: [id])
  market    Market        @relation(fields: [marketId], references: [id])
  parent    Comment?      @relation("CommentThread", fields: [parentId], references: [id])
  replies   Comment[]     @relation("CommentThread")
  votes     CommentVote[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  isDeleted Boolean       @default(false)
  deletedAt DateTime?

  @@index([marketId])
  @@index([parentId])
  @@index([createdAt])
}

model CommentVote {
  id        String          @id @default(uuid())
  accountId Int
  commentId String
  vote      CommentVoteType
  createdAt DateTime        @default(now())
  account   Account         @relation(fields: [accountId], references: [id])
  comment   Comment         @relation(fields: [commentId], references: [id])

  @@unique([accountId, commentId])
  @@index([commentId])
}

model Fill {
  id              String   @id @default(uuid())
  price           Int
  quantity        Int
  filledOrderId   Int
  orderId         Int
  filledAccountId Int
  accountId       Int
  createdAt       DateTime @default(now())
  filledOrder     Order    @relation("orderFills", fields: [filledOrderId], references: [id])
  order           Order    @relation("fills", fields: [orderId], references: [id])
  account         Account  @relation("BuyerAccountFills", fields: [filledAccountId], references: [id])
  filledAccount   Account  @relation("SellerAccountFills", fields: [accountId], references: [id])
}

model Session {
  id        String   @id @default(uuid())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  expiresAt DateTime
}
